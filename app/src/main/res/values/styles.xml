<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">

    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay"></style>

    <style name="ButtonStyle"></style>
    <style name="SingleText">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MainCommonText" parent="SingleText">
        <item name="android:textColor">@color/text_color_common</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ViewMainCommonText" parent="SingleText">
        <item name="android:textColor">@color/text_color_maroon</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
